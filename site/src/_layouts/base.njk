{% set navTitle %}
  <div style="display: inline-flex;">
    <strong>
      <div>nonplain</div>
      <div>+ 11ty</div>
      <div>starter</div>
    </strong>
  </div>
{% endset %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Create an 11ty website out of nonplain files">
    <title>{{- title | safe -}}</title>

    <style>
      body {
        font-family: 
          -apple-system,
          BlinkMacSystemFont,
          helvetica,
          'helvetica neue',
          ubuntu,
          roboto,
          noto,
          'segoe ui',
          arial,
          sans-serif;
        line-height: 1.5em;
        margin: 0;
        padding: 0;
      }

      header {
        border-bottom: 1px solid black;
      }

      nav ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
      }

      nav ul li:first-child {
        font-size: 1.2rem;
        margin: 0 0 18px;
      }

      nav ul li {
        margin: 6px 0;
      }

      nav, main, footer {
        margin: 0 auto;
        max-width: 65ch;
        padding: 1.5em;
      }

      footer {
        padding: 0 1.5em 1.5em;
      }

      footer * {
        font-size: 0.875em;
      }

      code {
        font-family:
          "SFMono-Regular",
          Hack,
          Menlo,
          Monaco,
          Consolas,
          "Liberation Mono",
          Courier,
          monospace;
      }

      @media (min-width: 150ch) {
        header {
          border-bottom: none;
          margin: 0 auto;
          max-width: 65ch;
          position: relative;
        }

        nav {
          margin-right: 60px;
          position: absolute;
          right: 100%;
          top: 0;
        }

        nav ul {
          text-align: right;
        }

        nav ul li {
          margin: 3px 0;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <ul>
          <li>{{ navTitle | safe }}</li>
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/subpage">Subpage</a>
          </li>
        </ul>
      </nav>
    </header>

    <main>
      {{ content | safe }}
    </main>

    <footer>
      <span id="pubyear">2021</span>
      <script>document.getElementById("pubyear").innerHTML = (new Date).getFullYear()</script>
    </footer>
  </body>
</html>
